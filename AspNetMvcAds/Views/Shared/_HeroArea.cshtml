<section class="hero-area bg-1 text-center overly">
    <!-- Container Start -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Header Contetnt -->
                <div class="content-block">
                    <h1>İlan ver, Ürün sat </h1>
                    <p>Ürünlerinizi istediğiniz kategoride yayınlayarak satabilirsiniz</p>
                    <div class="short-popular-category-list text-center">
                        <h2>Popüler Kategoriler</h2>
                        <ul class="list-inline">
                            @foreach (Category category in Model)
                            {
                                <li class="list-inline-item">
                                    <a asp-controller="Category" asp-action="Index" asp-route-cid="@category.Id">
                                        <i class="fa fa-bed"></i> @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                </div>
                <!-- Advance Search -->
                <div class="advance-search">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-12 col-md-12 align-content-center">
                                <form asp-controller="Advert" asp-action="Search" method="get">
                                    <div class="form-row">
                                        <div class="form-group col-md-7">
                                            <input type="text" class="form-control my-2 my-lg-1" name="query" placeholder="Ne aramıştınız?">
                                        </div>
                                        @*<div class="form-group col-md-3">
                                            <select class="w-100 form-control mt-lg-1 mt-md-2">
                                                <option>Category</option>
                                                <option value="1">Top rated</option>
                                                <option value="2">Lowest Price</option>
                                                <option value="4">Highest Price</option>
                                            </select>
                                        </div>*@
                                        <div class="form-group col-md-3">
                                            <input type="text" class="form-control my-2 my-lg-1" name="location" placeholder="Konum">
                                        </div>
                                        <div class="form-group col-md-2 align-self-center">
                                            <button type="submit" class="btn btn-primary">Ara</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Container End -->
</section>
